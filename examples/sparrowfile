set_spl %( 'dev.lvm' => 'https://github.com/Spigell/lvm.git' );

task-run "create main lv", "dev.lvm", %(
  action  => 'create',
  partition => '/dev/sda1',
  vg      => 'vg_main',
  lv      => 'slashroot',
  size    => '7GB'
);

task-run "remove main lv", "dev.lvm", %(
  action  => 'remove',
  vg      => 'vg_main',
  lv      => 'slashroot',
  force   => 'yes'
);
